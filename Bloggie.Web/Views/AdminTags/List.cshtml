@model List<Bloggie.Web.Models.Domain.Tag>
@{
}


<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Show All Tags - Admin Functionality</h1>
    </div>
</div>


<div class="container py-5">

    @if(Model != null && Model.Any())
    {
        <table class="table table-hover">
            <thead>
                <tr>
                    <th class="text-decoration-underline">Id</th>
                    <th class="text-decoration-underline">Name</th>
                    <th class="text-decoration-underline">Display Name</th>
                    <th class="text-decoration-underline">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var tag in Model)
                {
                    <tr>
                        <td>@tag.Id</td>
                        <td>@tag.Name</td>
                        <td>@tag.DisplayName</td>
                        <td>
                            <a asp-area=""
                                asp-controller="AdminTags"
                                asp-action="Edit" 
                                asp-route-id=@tag.Id>Edit</a>
                        </td>
                    </tr>                     
                }
            </tbody>

        </table>
    }
    else
    {
        <p>No Tags Found!</p>
    }
   

</div>   